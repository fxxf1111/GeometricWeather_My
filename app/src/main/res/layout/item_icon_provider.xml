<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_icon_provider_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorRoot"
    android:foreground="@drawable/selectable_item_background"
    tools:ignore="UnusedAttribute">

    <james.adaptiveicon.AdaptiveIconView
        android:id="@+id/item_icon_provider_clearIcon"
        android:layout_width="@dimen/little_weather_icon_size"
        android:layout_height="@dimen/little_weather_icon_size"
        android:layout_margin="@dimen/normal_margin"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        tools:background="@drawable/weather_clear_day" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/item_icon_provider_previewButton"
        android:src="@drawable/ic_search"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        style="@style/material_image_button" />

    <TextView
        android:id="@+id/item_icon_provider_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/normal_margin"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/item_icon_provider_clearIcon"
        android:layout_toStartOf="@id/item_icon_provider_previewButton"
        style="@style/title_text"
        tools:text="@string/geometric_weather" />

</RelativeLayout>