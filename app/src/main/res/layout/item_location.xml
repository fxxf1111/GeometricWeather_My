<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_location_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/selectable_item_background"
    android:background="@color/striking_red"
    android:stateListAnimator="@animator/touch_raise"
    tools:ignore="UnusedAttribute">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_location_swipeIcon_start"
        android:src="@drawable/ic_delete"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="@dimen/normal_margin"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:tint="@android:color/white"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_location_swipeIcon_end"
        android:src="@drawable/ic_star_outline"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="@dimen/normal_margin"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:tint="@android:color/white"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <LinearLayout
        android:id="@+id/item_location_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorRoot"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/item_location_weather_icon"
                android:layout_width="@dimen/material_icon_size"
                android:layout_height="@dimen/material_icon_size"
                android:layout_marginEnd="@dimen/little_margin"
                android:layout_centerVertical="true"
                tools:src="@drawable/weather_clear_day"
                tools:ignore="ContentDescription" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/item_location_resident_icon"
                android:src="@drawable/ic_circle_medium"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="0dp"
                style="@style/material_icon"
                app:tint="@color/colorTextAlert" />

            <TextView
                android:id="@+id/item_location_title"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAlignment="viewStart"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/item_location_weather_icon"
                android:layout_toStartOf="@id/item_location_resident_icon"
                style="@style/title_text"
                tools:text="Current Location, 5°"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>

        <TextView
            android:id="@+id/item_location_alerts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/normal_margin"
            android:textAlignment="viewStart"
            style="@style/subtitle_text"
            tools:text="大雾黄色预警, 发布于2018-07-10 02:32\n大风蓝色预警, 发布于2018-07-10 03:34"/>

        <TextView
            android:id="@+id/item_location_subtitle"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/normal_margin"
            android:textAlignment="viewStart"
            android:textColor="@color/colorTextContent"
            style="@style/subtitle_text"
            tools:text="中国 山东省 青岛市 李沧区"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/item_location_source"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/normal_margin"
            android:textStyle="bold"
            android:textSize="10sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAlignment="viewStart"
            style="@style/subtitle_text"
            tools:text="Powered by 彩云天气"
            tools:ignore="RtlHardcoded,SmallSp" />

    </LinearLayout>

</RelativeLayout>