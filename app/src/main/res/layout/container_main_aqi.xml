<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_main_aqi"
    android:layout_margin="0dp"
    style="@style/material_card">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/container_main_aqi_title"
            android:text="@string/air_quality"
            android:layout_margin="@dimen/normal_margin"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            style="@style/content_text" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <wangdaye.com.geometricweather.ui.widget.ArcProgress
                android:id="@+id/container_main_aqi_progress"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="@dimen/large_margin"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:max="400"
                app:background_color="@color/colorLine"
                app:text_color="@color/colorTextContent"
                app:bottom_text_color="@color/colorTextSubtitle"
                app:arc_angle="240"
                app:progress_width="10dp"
                tools:progress="126"
                tools:progress_color="@color/colorLevel_2"
                tools:text="126"
                tools:bottom_text="@string/aqi_2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/container_main_aqi_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/container_main_aqi_progress"
                android:layout_centerVertical="true"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="@dimen/little_margin"
                tools:ignore="UnusedAttribute" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>