<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_learn_more_about_geocoder_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorRoot">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_learn_more_about_geocoder_title"
            android:text="@string/learn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextTitle"
            android:textStyle="bold"
            android:layout_margin="@dimen/normal_margin"
            style="@style/large_title_text" />

        <TextView
            android:id="@+id/dialog_learn_more_about_geocoder_content"
            android:text="@string/feedback_about_geocoder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextContent"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/normal_margin"
            android:layout_below="@id/dialog_learn_more_about_geocoder_title"
            style="@style/content_text" />

        <Button
            android:id="@+id/dialog_learn_more_about_geocoder_doneBtn"
            android:text="@string/done"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorAccent"
            android:layout_below="@id/dialog_learn_more_about_geocoder_content"
            style="@style/material_button"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>